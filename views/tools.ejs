<%- include('partials/head') %>
<%- include('partials/navbar') %>

<main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pt-8">
  <section class="mb-10">
    <h1 class="text-4xl font-bold gold-text">Trading Tools</h1>
    <p class="mt-3 text-gray-300">Calculator widgets designed for students in our forex training institute in Kerala, including forex classes in Calicut and Calicut.</p>
  </section>

  <section class="grid gap-6 md:grid-cols-2">
    <article class="panel">
      <h2 class="text-xl font-semibold gold-text">Lot Size Calculator</h2>
      <div class="mt-4 grid gap-3">
        <input id="lotAccount" class="terminal-input" type="number" placeholder="Account Balance" />
        <input id="lotRisk" class="terminal-input" type="number" placeholder="Risk %" />
        <input id="lotStop" class="terminal-input" type="number" placeholder="Stop Loss (pips)" />
        <button data-calc="lot" class="btn-gold py-2 text-xs uppercase tracking-wider">Calculate</button>
        <p id="lotResult" class="text-sm text-dpGreen">Result: -</p>
      </div>
    </article>

    <article class="panel">
      <h2 class="text-xl font-semibold gold-text">Pip Calculator</h2>
      <div class="mt-4 grid gap-3">
        <input id="pipLot" class="terminal-input" type="number" placeholder="Lot Size" />
        <input id="pipPair" class="terminal-input" type="number" placeholder="Pip Movement" />
        <button data-calc="pip" class="btn-gold py-2 text-xs uppercase tracking-wider">Calculate</button>
        <p id="pipResult" class="text-sm text-dpGreen">Result: -</p>
      </div>
    </article>

    <article class="panel">
      <h2 class="text-xl font-semibold gold-text">Risk Calculator</h2>
      <div class="mt-4 grid gap-3">
        <input id="riskBalance" class="terminal-input" type="number" placeholder="Balance" />
        <input id="riskPercent" class="terminal-input" type="number" placeholder="Risk %" />
        <button data-calc="risk" class="btn-gold py-2 text-xs uppercase tracking-wider">Calculate</button>
        <p id="riskResult" class="text-sm text-dpGreen">Result: -</p>
      </div>
    </article>

    <article class="panel">
      <h2 class="text-xl font-semibold gold-text">Profit/Loss Calculator</h2>
      <div class="mt-4 grid gap-3">
        <input id="plEntry" class="terminal-input" type="number" step="0.0001" placeholder="Entry Price" />
        <input id="plExit" class="terminal-input" type="number" step="0.0001" placeholder="Exit Price" />
        <input id="plLots" class="terminal-input" type="number" placeholder="Lots" />
        <button data-calc="pl" class="btn-gold py-2 text-xs uppercase tracking-wider">Calculate</button>
        <p id="plResult" class="text-sm text-dpGreen">Result: -</p>
      </div>
    </article>
  </section>

  <section class="mt-10 panel">
    <h2 class="text-2xl font-semibold gold-text">Need Help Applying These Tools?</h2>
    <p class="mt-3 text-sm text-gray-300">Request a guided session to use lot size, risk, and P/L planning in your daily trades.</p>
    <a href="/contact?leadType=tool_access&sourcePage=%2Ftools" class="btn-gold mt-5 inline-block px-5 py-2 text-xs uppercase tracking-wider">Request Tool Guidance</a>
  </section>
</main>

<%- include('partials/footer') %>

